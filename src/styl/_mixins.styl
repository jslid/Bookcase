	// Background Opacity - bg-opacity-mixin(#d5d5d5, 25)

	background-opacity-mixin($color, $percentage) 
		$percent = $percentage / 100
		$rgba = rgba($color, $percent)
		background-color: $color
		background-color: $rgba
	

	// Background Position - background-position-mixin(20, 30)

	background-position-mixin($xValue, $yValue) 
		$xValuePx = $xValue
		$xValueRem = $xValue / $baseFontSize
		$yValuePx = $yValue
		$yValueRem = $yValue / $baseFontSize
		background-position: unit($xValuePx, 'px') unit($yValuePx, 'px')
		background-position: unit($xValueRem, 'rem') unit($yValueRem, 'rem')
	

	// Background Size - background-size-mixin(20px, 30px) or background-size-mixin(20%, 30%)

	background-size-mixin($width = auto, $height = auto) 
		-webkit-background-size: $width $height
		-moz-background-size: $width $height
		-o-background-size: $width $height
		background-size: $width $height
	

	// Background Cover - background-cover;

	background-cover-mixin($cover = cover) 
		-webkit-background-size: $cover
		-moz-background-size: $cover
		-o-background-size: $cover
		background-size: $cover
	

	// Background Contain - background-contain;

	background-contain() 

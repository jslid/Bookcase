// REM to PX

	// REM - rem-mixin(margin-top, 12)

	rem-mixin($property, $value)
		$valuePx = $value
		$valueRem = $value / $baseFontSize
		{$property}: unit($valuePx, 'px')
		{$property}: unit($valueRem, 'rem')
	

	// REM Top/Bottom and Right/Left - rem-two-mixin(border, 20, 15)

	rem-two-mixin($property, $topbottom, $rightleft)
		$tpbtmPx = $topbottom
		$tpbtmRem = $topbottom / $baseFontSize
		$rightleftPx = $rightleft
		$rightleftRem = $rightleft / $baseFontSize
		{$property}: unit($tpbtmPx, 'px') unit($rightleftPx, 'px')
		{$property}: unit($tpbtmRem, 'rem') unit($rightleftRem, 'rem')


	// REM Top, Right/Left, Bottom - rem-three-mixin(padding, 10, 15, 20)

	rem-three-mixin($property, $top, $rightleft, $bottom)
		$topPx = $top
		$topRem = $top / $baseFontSize
		$rightleftPx = $rightleft
		$rightleftRem = ($rightleft / $baseFontSize)
		$bottomPx = $bottom
		$bottomRem = $bottom / $baseFontSize
		{$property}: unit($topPx, 'px') unit($rightleftPx, 'px') unit($bottomPx, 'px')
		{$property}: unit($topRem, 'rem') unit($rightleftRem, 'rem') unit($bottomRem, 'rem')


	// REM Top, Right, Bottom, Left - rem-four-mixin(margin, 20, 12, 5, 10)

	rem-four-mixin($property, $top, $right, $bottom, $left)
		$topPx = $top
		$topRem = $top / $baseFontSize
		$rightPx = $right
		$rightRem = $right / $baseFontSize
		$bottomPx = $bottom
		$bottomRem = $bottom / $baseFontSize
		$leftPx = $left
		$leftRem = $left / $baseFontSize
		{$property}: unit($topPx, 'px') unit($rightPx, 'px') unit($bottomPx, 'px') unit($leftPx, 'px')
		{$property}: unit($topRem, 'rem') unit($rightRem, 'rem') unit($bottomRem, 'rem') unit($leftRem, 'rem')
		



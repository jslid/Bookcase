	// Animation Duration - animate-mixin(3)

	animate-mixin($duration) 
		$animate-mixin = unit($duration, 's')
		-webkit-animation-duration: $animate-mixin
		animation-duration: $animate-mixin
		-webkit-animation-fill-mode: both
